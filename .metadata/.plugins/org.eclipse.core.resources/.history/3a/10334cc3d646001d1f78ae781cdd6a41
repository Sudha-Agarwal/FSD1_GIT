	}
	
	public static void main(String args[]){
		System.out.println("Hello World");
		int x =11;
		int y = 10;
		
		//Arithmetic operators:
		//+, -, *, /, %, ++, --
		
		int result = x + y;
		
		
		//Assignment Operators
		int x1 = 10;
		x1 = x1+5; //output-> 15
		
		//or
